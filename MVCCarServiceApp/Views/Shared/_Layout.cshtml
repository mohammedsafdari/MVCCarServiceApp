<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:black; border-bottom:none; height:10px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("MS Auto Garage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
               <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })" style="padding:0px;">
                        <img src="~/Images/ezgif-1-b4fe78f814d01.jpg" alt="" style="height:60px" />
               </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (ViewContext.HttpContext.User.IsInRole(MVCCarServiceApp.Models.Roles.Admin))
                    {
                        <li>@Html.ActionLink("Customer List", "Customers", "Customer", "", new { @class = "navElement" })</li>
                        <li>@Html.ActionLink("Admin Panel", "AdminPanel", "Admin", "", new { @class = "navElement" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("View Cars", "CustomerDetails", "Car", "", new { @class = "navElement" })</li>
                    }
                    @RenderSection("navbar", required: false)
                <li>
                    <div class="dropdown">
                        <button class="dropbtn">Dropdown</button>
                        <div class="dropdown-content">
                            <a href="#">Link 1</a>
                            <a href="#">Link 2</a>
                            <a href="#">Link 3</a>
                        </div>
                    </div>
                </li>
                    <li>@Html.ActionLink("About", "About", "Home", "", new { @class = "navElement" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", "", new { @class = "navElement" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer style="clear:both">
            <hr />
            <p>&copy; @DateTime.Now.Year - MS Auto Garage Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
