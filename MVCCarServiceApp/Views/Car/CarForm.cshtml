@model MVCCarServiceApp.ViewModels.OneCarAndCustomerViewModel
@{
    ViewBag.Title = "CarForm";
}

<h2>Car Form</h2>

@using (Html.BeginForm("AddCar", "Car"))
{
<table class="form-group">
    <tr>
        <td class="text-center"><strong>VIN</strong></td>
        <td>
            @Html.TextBoxFor(m => m.Car.VIN, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(m => m.Car.VIN, "", new { @class="text-danger" })</td>
    </tr>
    <tr>
        <td class="text-center"><strong>Make</strong></td>
        <td>
            @Html.DropDownListFor(m => m.Car.Make, new SelectList(Model.CarMakes, "Make", "Make"), "Select Car Make", new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(m => m.Car.Make, "", new { @class="text-danger" })</td>
    </tr>
    <tr>
        <td class="text-center"><strong>Model</strong></td>
        <td>
            @Html.TextBoxFor(m => m.Car.Model, new { @class = "form-control" })
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(m => m.Car.Model, "", new { @class="text-danger" })</td>
    </tr>
    <tr>
        <td class="text-center"><strong>Style</strong></td>
        <td>
            @Html.DropDownListFor(m => m.Car.Style, new SelectList(Model.CarStyles, "Style", "Style"), "Select Car Style", new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(m => m.Car.Style, "", new { @class="text-danger" })</td>
    </tr>
    <tr>
        <td class="text-center"><strong>Color</strong></td>
        <td>
            @Html.TextBoxFor(m => m.Car.Color, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td></td>
        <td>@Html.ValidationMessageFor(m => m.Car.Color, "", new { @class="text-danger" })</td>
    </tr>
</table>
    @Html.HiddenFor(c => c.User.Id)
    @Html.HiddenFor(c => c.User.FirstName)
    @Html.HiddenFor(c => c.User.LastName)
    @Html.HiddenFor(c => c.User.Email)
    @Html.HiddenFor(c => c.User.City)
    @Html.HiddenFor(c => c.User.PhoneNumber)
    <button class="btn btn-primary" type="submit">Add</button>
    <hr />
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}